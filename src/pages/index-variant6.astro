---
import Layout from "../layouts/Layout.astro";

const sections = [
  {
    title: "Sobre mí",
    description: "Conoce a Pablo Martín, biólogo marino y divulgador. Descubre su historia, valores y motivaciones.",
    href: "/sobre-mi/",
    image: "https://placehold.co/900x600?text=Sobre+mi",
    cta: "Ver perfil",
    bg: "bg-gradient-to-r from-blue-50 to-blue-100",
  },
  {
    title: "Biología Marina",
    description: "Proyectos de investigación, conservación y educación sobre los ecosistemas marinos de Canarias.",
    href: "/biologia-marina/",
    image: "https://placehold.co/900x600?text=Biologia+Marina",
    cta: "Explorar área",
    bg: "bg-gradient-to-r from-cyan-50 to-cyan-100",
  },
  {
    title: "Buceo",
    description: "Formación, experiencias y relatos de buceo científico y recreativo en el Atlántico.",
    href: "/buceo/",
    image: "https://placehold.co/900x600?text=Buceo",
    cta: "Sumérgete",
    bg: "bg-gradient-to-r from-teal-50 to-teal-100",
  },
  {
    title: "Comunicación Medioambiental",
    description: "Divulgación, talleres y campañas para sensibilizar sobre la importancia del océano.",
    href: "/comunicacion-medioambiental/",
    image: "https://placehold.co/900x600?text=Comunicacion",
    cta: "Ver iniciativas",
    bg: "bg-gradient-to-r from-green-50 to-green-100",
  },
  {
    title: "Proyectos",
    description: "Colaboraciones, publicaciones y proyectos destacados en ciencia y conservación.",
    href: "/proyectos/",
    image: "https://placehold.co/900x600?text=Proyectos",
    cta: "Ver proyectos",
    bg: "bg-gradient-to-r from-yellow-50 to-yellow-100",
  },
  {
    title: "Viajes",
    description: "Relatos, fotografías y aprendizajes de expediciones científicas y de buceo.",
    href: "/viajes/",
    image: "https://placehold.co/900x600?text=Viajes",
    cta: "Ver viajes",
    bg: "bg-gradient-to-r from-purple-50 to-purple-100",
  },
];

const testimonials = [
  {
    name: "María López",
    text: "Colaborar con Pablo ha sido inspirador. Su pasión por el océano es contagiosa y su trabajo, impecable.",
    image: "https://placehold.co/80x80?text=ML",
  },
  {
    name: "Carlos Pérez",
    text: "Gracias a sus talleres, mi visión sobre la conservación marina ha cambiado para siempre.",
    image: "https://placehold.co/80x80?text=CP",
  },
];

const partners = [
  { name: "Oceanic Org", logo: "https://placehold.co/120x40?text=Oceanic" },
  { name: "BlueCanary", logo: "https://placehold.co/120x40?text=BlueCanary" },
  { name: "DiveScience", logo: "https://placehold.co/120x40?text=DiveScience" },
];
---

<Layout title="Pablo Dive - Landing super visual" description="Landing muy visual, con bloques grandes, testimonios y partners.">
  <section class="relative min-h-[90vh] flex flex-col items-center justify-center text-center py-28 bg-gradient-to-b from-blue-200/60 to-base-100">
    <img src="https://placehold.co/220x220?text=Pablo" alt="Pablo Martín" class="w-56 h-56 rounded-full object-cover mb-8 shadow-2xl border-4 border-white" loading="lazy" />
    <h1 class="text-7xl font-extrabold mb-6 tracking-tight">Pablo Martín</h1>
    <p class="text-2xl max-w-3xl mx-auto mb-10 text-base-content/80">Biólogo marino, divulgador ambiental y explorador de los océanos. Inspirando a proteger el mar desde Tenerife.</p>
    <div class="flex flex-wrap gap-8 justify-center mb-8">
      <a href="/sobre-mi/" class="btn btn-primary btn-xl">Sobre mí</a>
      <a href="/proyectos/" class="btn btn-outline btn-xl">Proyectos</a>
      <a href="/viajes/" class="btn btn-outline btn-xl">Viajes</a>
    </div>
  </section>

  {sections.map((section, idx) => (
    <section class={`w-full py-20 ${section.bg}`}>
      <div class="max-w-7xl mx-auto flex flex-col lg:flex-row items-center gap-12 px-6">
        <img src={section.image} alt={section.title} class="w-full lg:w-1/2 h-96 object-cover rounded-2xl shadow-xl" loading="lazy" />
        <div class="flex-1 text-center lg:text-left">
          <h2 class="text-4xl font-bold mb-4">{section.title}</h2>
          <p class="text-lg mb-6 text-base-content/80">{section.description}</p>
          <a href={section.href} class="btn btn-secondary btn-lg">{section.cta}</a>
        </div>
      </div>
    </section>
  ))}

  <section class="bg-base-200 py-20">
    <div class="max-w-5xl mx-auto px-4 text-center">
      <h3 class="text-3xl font-semibold mb-10">Testimonios</h3>
      <div class="flex flex-wrap justify-center gap-10">
        {testimonials.map(t => (
          <div class="bg-base-100 rounded-2xl shadow-lg p-8 max-w-xs flex flex-col items-center">
            <img src={t.image} alt={t.name} class="w-20 h-20 rounded-full mb-4 object-cover border-2 border-primary" />
            <p class="italic mb-2">“{t.text}”</p>
            <span class="font-semibold text-base-content/70">{t.name}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="bg-base-100 py-12">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h4 class="text-xl font-semibold mb-6">Colaboran</h4>
      <div class="flex flex-wrap justify-center items-center gap-8">
        {partners.map(p => (
          <img src={p.logo} alt={p.name} class="h-10 object-contain grayscale hover:grayscale-0 transition-all" />
        ))}
      </div>
    </div>
  </section>

  <section class="max-w-5xl mx-auto py-20 px-4 text-center">
    <h3 class="text-3xl font-semibold mb-6">El océano, nuestra inspiración</h3>
    <p class="text-lg text-base-content/80 mb-8">El océano es el corazón de nuestro planeta. Descubre cómo la ciencia, la educación y la acción pueden marcar la diferencia en la conservación marina.</p>
    <a href="/comunicacion-medioambiental/" class="btn btn-accent btn-xl">Descubre más</a>
  </section>
</Layout>
