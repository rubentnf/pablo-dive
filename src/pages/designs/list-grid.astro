---
import Layout from "../../layouts/Layout.astro";
import { getTrips } from "../../pages/trips/trip.api";

const trips = await getTrips();
---

<Layout
  title="Viajes | Pablo Dive"
  description="Viajes y expediciones relacionados con el submarinismo"
>
  <div class="bg-slate-50 min-h-screen">
    <!-- Header -->
    <div class="bg-white py-20 px-6 text-center border-b border-slate-200">
      <h1 class="text-4xl md:text-6xl font-bold text-slate-900 mb-4">
        Pr√≥ximas Expediciones
      </h1>
      <p class="text-slate-500 text-lg max-w-2xl mx-auto">
        Descubre destinos √∫nicos y √∫nete a la aventura.
      </p>
    </div>

    <!-- Grid -->
    <div class="max-w-7xl mx-auto px-6 py-20">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          trips.map((trip) => (
            <a
              href={`/trips/${trip.slug}`}
              class="group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 flex flex-col h-full"
            >
              <div class="relative aspect-[4/3] overflow-hidden">
                <img
                  src={trip.image.url}
                  alt={trip.title}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                />
                <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-bold text-slate-900 uppercase tracking-wider">
                  {trip.duration} D√≠as
                </div>
              </div>
              <div class="p-6 flex flex-col flex-1">
                <div class="flex items-center gap-2 text-xs font-bold text-cyan-600 uppercase tracking-widest mb-3">
                  <span>üìç {trip.destination}</span>
                </div>
                <h2 class="text-2xl font-bold text-slate-900 mb-3 group-hover:text-cyan-600 transition-colors">
                  {trip.title}
                </h2>
                <p class="text-slate-500 text-sm line-clamp-2 mb-6">
                  {trip.summary}
                </p>
                <div class="flex justify-between items-center pt-6 border-t border-slate-100 mt-auto">
                  <span class="text-slate-400 text-sm">Desde</span>
                  <span class="text-xl font-bold text-slate-900">
                    {trip.price}‚Ç¨
                  </span>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</Layout>
