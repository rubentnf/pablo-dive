---
import { marked } from "marked";
import { getAbout } from "../../sobre-mi/about.api";
import Layout from "../../../layouts/Layout.astro";
const about = await getAbout();
const aboutExtendedBio = marked(about.extendedBio || "");
---
<Layout title="Sobre m√≠ | Moderno 1" description={about.shortBio}>
  <section class="relative min-h-screen flex flex-col items-center justify-center bg-gradient-to-br from-cyan-400 via-blue-600 to-slate-900 overflow-hidden">
    <div class="absolute inset-0 pointer-events-none">
      <svg width="100%" height="100%" viewBox="0 0 1440 320" fill="none" xmlns="http://www.w3.org/2000/svg" class="absolute bottom-0 left-0">
        <path fill="#fff" fill-opacity="0.08" d="M0,160L48,165.3C96,171,192,181,288,165.3C384,149,480,107,576,117.3C672,128,768,192,864,218.7C960,245,1056,235,1152,218.7C1248,203,1344,181,1392,170.7L1440,160L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
      </svg>
    </div>
    <div class="z-10 flex flex-col items-center text-center max-w-2xl px-6 py-12 animate-fadein">
      <img src={about.picture.url} alt="Pablo Dive" class="w-32 h-32 rounded-full border-4 border-white shadow-lg mb-6 animate-float" />
      <h1 class="text-5xl md:text-6xl font-extrabold text-white mb-2 tracking-tight drop-shadow-lg">{about.fullname} <span class="text-2xl">ü§ø</span></h1>
      <p class="text-lg md:text-xl text-white/80 mb-6 font-light">{about.shortBio}</p>
      <div class="prose prose-invert max-w-xl mb-8" set:html={aboutExtendedBio} />
      <div class="flex gap-6 mb-8 justify-center">
        <div class="bg-white/90 rounded-xl px-6 py-4 shadow-lg text-center animate-pop">
          <span class="text-2xl font-bold text-cyan-700">294K</span>
          <div class="text-sm text-slate-700">Seguidores</div>
        </div>
        <div class="bg-white/90 rounded-xl px-6 py-4 shadow-lg text-center animate-pop2">
          <span class="text-2xl font-bold text-blue-800">+10</span>
          <div class="text-sm text-slate-700">A√±os buceando</div>
        </div>
        <div class="bg-white/90 rounded-xl px-6 py-4 shadow-lg text-center animate-pop3">
          <span class="text-2xl font-bold text-purple-800">+150</span>
          <div class="text-sm text-slate-700">Especies filmadas</div>
        </div>
      </div>
      <blockquote class="italic text-xl md:text-2xl text-white/90 mb-6 animate-fadein2">"El oc√©ano no necesita m√°s gente que lo salve, necesita m√°s gente que lo ame."</blockquote>
      <a href="/contact" class="inline-block bg-gradient-to-r from-cyan-500 to-blue-600 px-8 py-4 rounded-full text-white font-bold shadow-lg hover:scale-105 transition-all duration-300 animate-fadein3">Colabora conmigo</a>
      <div class="flex gap-4 justify-center mt-8 animate-fadein4">
        <a href="https://instagram.com/pablo.dive" target="_blank" class="bg-gradient-to-r from-pink-500 to-orange-400 px-5 py-2 rounded-xl text-white font-bold shadow-lg hover:scale-110 transition-all duration-300">Instagram</a>
        <a href="https://www.tiktok.com/@pablo.dive" target="_blank" class="bg-black px-5 py-2 rounded-xl text-white font-bold shadow-lg hover:scale-110 transition-all duration-300">TikTok</a>
      </div>
    </div>
    <style>
      .animate-float {animation: float 3s ease-in-out infinite;}
      @keyframes float {0%,100%{transform:translateY(0);}50%{transform:translateY(-12px);}}
      .animate-fadein {animation: fadein 1.2s cubic-bezier(.68,-0.55,.27,1.55) 0.2s both;}
      .animate-fadein2 {animation: fadein 1.2s cubic-bezier(.68,-0.55,.27,1.55) 0.5s both;}
      .animate-fadein3 {animation: fadein 1.2s cubic-bezier(.68,-0.55,.27,1.55) 0.8s both;}
      .animate-fadein4 {animation: fadein 1.2s cubic-bezier(.68,-0.55,.27,1.55) 1.1s both;}
      @keyframes fadein {from{opacity:0;transform:translateY(40px);}to{opacity:1;transform:translateY(0);}}
      .animate-pop {animation: pop 0.8s cubic-bezier(.68,-0.55,.27,1.55) 0.3s both;}
      .animate-pop2 {animation: pop 0.8s cubic-bezier(.68,-0.55,.27,1.55) 0.5s both;}
      .animate-pop3 {animation: pop 0.8s cubic-bezier(.68,-0.55,.27,1.55) 0.7s both;}
      @keyframes pop {0%{transform:scale(0.7);}80%{transform:scale(1.1);}100%{transform:scale(1);}}
    </style>
  </section>
</Layout>
